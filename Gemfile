source 'https://rubygems.org'

# default gems
gem 'rails', '~> 5.0.0'
gem 'sass-rails', '~> 5.0'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.1.0'
gem 'jquery-rails'
# Turbolinks makes navigating your web application faster. Read more: https://github.com/turbolinks/turbolinks
gem 'turbolinks'
gem 'jbuilder', '~> 2.0'
gem 'sdoc', '~> 0.4.0', group: :doc

# login/registration
gem 'devise', '~> 4.2'

# image uploads
gem 'paperclip', '~> 5.1'

# bootstrap
gem 'bootstrap-sass', '~> 3.3', '>= 3.3.6'

# pagination
gem 'kaminari', '~> 0.17.0'

# Code highlighting
gem 'ace-rails-ap', '~> 4.1', '>= 4.1.1'

# Friendly urls
gem 'friendly_id', '~> 5.2'

# Development
group :development, :test do
  gem 'byebug'
  gem 'spring'
  gem 'sqlite3'
  gem 'foreman'
  gem 'hirb'
  gem 'web-console', '~> 2.0'
end

# Production
group :production do
	gem 'sqlite3'
	gem 'rails_12factor'
end

# Windows does not include zoneinfo files, so bundle the tzinfo-data gem
gem 'tzinfo-data', platforms: [:mingw, :mswin, :x64_mingw, :jruby]
