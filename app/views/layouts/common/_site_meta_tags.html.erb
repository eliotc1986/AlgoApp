<meta charset="utf-8"/>
<meta http-equiv="x-ua-compatible" content="ie=edge"/>
<meta name="viewport" content="width=device-width, initial-scale=1.0"/>

<title><%= t('meta.title') %></title>
<meta name="keywords" content="<%= t('meta.keywords') %>"/>
<meta name="description" content="<%= t('meta.description') %>"/>

<!-- ogp -->
<meta property="og:title" content="<%= t('meta.title') %>"/>
<meta property="og:type" content="website"/>
<meta property="og:url" content="<%= t('meta.url') %>"/>
<meta property="og:image" content="<%= t('meta.url') %><%= asset_path( 'algoapp-fb.png' ) %>"/>
<meta property="og:image:width" content="1200"/>
<meta property="og:image:height" content="630"/>
<meta property="og:description" content="<%= t('meta.description') %>"/>
<!-- //ogp -->

<!-- twitter -->
<meta name="twitter:card" content="summary" />
<meta property="twitter:url" content="<%= t('meta.url') %>" />
<meta name="twitter:title" content="<%= t('meta.title') %>" />
<meta name="twitter:description" content="<%= t('meta.description') %>" />
<meta property="twitter:image" content="<%= t('meta.url') %><%= asset_path( 'algoapp-tw.png' ) %>" />
<meta property="twitter:image:alt" content="<%= t('meta.title') %>" />
<!-- //twitter -->
