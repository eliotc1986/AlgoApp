<% @posts.each do |post| %>
  <div class="card-box">
    <div class="media">
      <div class="media-left">
        <%= link_to(user_path(post.user)) do %>
          <%= image_tag post.user.image.url(:medium), class: "media-object user-image img-circle", alt: "user image" %>
        <% end %>
      </div>
      <div class="media-body">
        <h3><%= link_to post.title, post, class: "post-title" %></h3>
        <p class="post-meta"><%= post.created_at.strftime("%B %d, %Y") %> by <%= link_to post.user.username, user_path(post.user) %></p>
      </div>
    </div>

    <a href="/posts?&amp;search=<%= post.category %>" class="tag">
      <span class="label label-primary">#<%= post.category %></span>
    </a>
    <a href="/posts?&amp;search=<%= post.difficulty %>" class="tag">
      <span class="label label-primary">#<%= post.difficulty %></span>
    </a>

    <span class="label label-default">
      <%= post.likes.count %> <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>
    </span>
    <a href="/posts/<%= post.id %>/#comments">
      <span class="label label-default">
        <%= post.comments.count %> <span class="glyphicon glyphicon-bullhorn" aria-hidden="true"></span>
      </span>
    </a>
  </div>
<% end %>
