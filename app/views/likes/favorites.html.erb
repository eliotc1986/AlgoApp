<div class="row">
  <div class="col-md-12">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Algorithms I Like</h3>
      </div>
      <div class="panel-body">
        <% if @likes.length == 0 %>
          <h5>Looks like you haven't liked any algorithms yet... Why not explore the site and find some?</h5>
        <% else %>
          <div class="list-group">
            <% @likes.each do |like| %>
              <a href="/posts/<%= like.post.id %>" class="list-group-item">
              <%= image_tag like.post.user.image.url(:small), class: "img-circle", id: "navbar-pic", alt: "user image" %>
              <%= like.post.title %> <i>Posted by <%= like.post.user.username %> on <%= like.post.created_at.strftime("%B %d, %Y") %></i>
              </a>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
